- index = index
.activity.nested-fields id='activity_facility_#{index}' data-description='#{t('.description')}' data-upload='upload_facility_#{index}' data-preview='preview_facility_#{index}' label='label_facility_#{index}'
  .activity-icon.bg-primary.text-white.shadow-primary
    i.fa.fa-cocktail
  .activity-detail
    .row
      .col-md-12
        h4 = f.text_field :name, class: 'form-control', placeholder: t('.name')
        p = f.text_area :description, class: 'summernote', placeholder: t('.description')
      .col
        = link_to_remove_association '<i class="fa fa-trash"></i>'.html_safe, f,
          data: { confirm: t('buttons.confirm') },
          class: 'btn btn-danger'

javascript:
  $(".summernote").summernote({
      dialogsInBody: true,
      minHeight: 150,
      placeholder: $("#activity_facility_#{index}").data('description'),
      toolbar: [
        ['style', ['bold', 'italic', 'underline', 'clear']],
        ['font', ['strikethrough', 'superscript', 'subscript']],
        ['fontsize', ['fontsize']],
        ['color', ['color']],
        ['para', ['ul', 'ol', 'paragraph']]
      ]
  })
