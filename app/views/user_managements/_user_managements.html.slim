- if @user_managements.present?
  .card-body.p-0
    .table-responsive
      table.table.table-striped
        tr
          th = 'Nama Lengkap'
          th = 'E-mail'

        - @user_managements.each do |user_management|
          tr
            td
              = user_management.name
              .table-links
                = link_to t('buttons.view'), user_management_path(user_management)
                .bullet
                = link_to t('buttons.edit'), edit_user_management_path(user_management)
                .bullet
                = link_to t('buttons.destroy'), user_management_path(user_management), method: :delete,
                          class: 'text-danger', data: { confirm: t('buttons.confirm') }
            td = user_management.email

  .card-footer.text-right
    nav.d-inline-block
      = paginate @user_managements
- else
  = render partial: 'shared/empty_message', locals: { path: new_user_management_path }
