    .form-group.row.mb-4
      = f.label :martial_status, t('.martial_status'), class: 'col-form-label text-md-right col-12 col-md-3 col-lg-3'
      .col-sm-12.col-md-7
        = f.text_field :martial_status, class: 'form-control'
    .form-group.row.mb-4
      = f.label :job, t('.job'), class: 'col-form-label text-md-right col-12 col-md-3 col-lg-3'
      .col-sm-12.col-md-7
        = f.text_field :job, class: 'form-control'
    .form-group.row.mb-4
      = f.label :nationality, t('.nationality'), class: 'col-form-label text-md-right col-12 col-md-3 col-lg-3'
      .col-sm-12.col-md-7
        = f.text_field :nationality, class: 'form-control'
    .form-group.row.mb-4
      label.col-form-label.text-md-right.col-12.col-md-3.col-lg-3
      .col-sm-12.col-md-7
        = f.submit t('buttons.submit'), class: 'btn btn-primary'
      = link_to t('buttons.back'), identities_path, class: 'btn btn-secondary'
