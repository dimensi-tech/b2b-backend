.card-body
  = form_for @identity do |f|
    - if @identity.errors.any?
      .alert.alert-danger.alert-has-icon
        .alert-icon
          i.fas.fa-exclamation-triangle
        .alert-body
          .alert-title = "#{pluralize(@identity.errors.count, "error")} prohibited this identity from being saved:"
          ul
            - @identity.errors.full_messages.each do |message|
              li = message

    .form-group.row.mb-4
      = f.label :nik, t('.nik'), class: 'col-form-label text-md-right col-12 col-md-3 col-lg-3'
      .col-sm-12.col-md-7
        = f.text_field :nik, class: 'form-control'
    .form-group.row.mb-4
      = f.label :full_name, t('.full_name'), class: 'col-form-label text-md-right col-12 col-md-3 col-lg-3'
      .col-sm-12.col-md-7
        = f.text_field :full_name, class: 'form-control'
    .form-group.row.mb-4
      = f.label :birth_place, t('.birth_place'), class: 'col-form-label text-md-right col-12 col-md-3 col-lg-3'
      .col-sm-12.col-md-7
        = f.text_field :birth_place, class: 'form-control'
    .form-group.row.mb-4
      = f.label :birth_date, t('.birth_date'), class: 'col-form-label text-md-right col-12 col-md-3 col-lg-3'
      .col-sm-12.col-md-7
        = f.date_select :birth_date, class: 'form-control'
    .form-group.row.mb-4
      = f.label :gender, t('.gender'), class: 'col-form-label text-md-right col-12 col-md-3 col-lg-3'
      .col-sm-12.col-md-7
        = f.text_field :gender, class: 'form-control'
    .form-group.row.mb-4
      = f.label :address, t('.address'), class: 'col-form-label text-md-right col-12 col-md-3 col-lg-3'
      .col-sm-12.col-md-7
        = f.text_field :address, class: 'form-control'
    .form-group.row.mb-4
      = f.label :rt, t('.rt'), class: 'col-form-label text-md-right col-12 col-md-3 col-lg-3'
      .col-sm-12.col-md-7
        = f.text_field :rt, class: 'form-control'
    .form-group.row.mb-4
      = f.label :rw, t('.rw'), class: 'col-form-label text-md-right col-12 col-md-3 col-lg-3'
      .col-sm-12.col-md-7
        = f.text_field :rw, class: 'form-control'
    .form-group.row.mb-4
      = f.label :urban_village, t('.urban_village'), class: 'col-form-label text-md-right col-12 col-md-3 col-lg-3'
      .col-sm-12.col-md-7
        = f.text_field :urban_village, class: 'form-control'
    .form-group.row.mb-4
      = f.label :district, t('.district'), class: 'col-form-label text-md-right col-12 col-md-3 col-lg-3'
      .col-sm-12.col-md-7
        = f.text_field :district, class: 'form-control'
    .form-group.row.mb-4
      = f.label :province_id, t('.province_id'), class: 'col-form-label text-md-right col-12 col-md-3 col-lg-3'
      .col-sm-12.col-md-7
        = f.number_field :province_id, class: 'form-control'
    .form-group.row.mb-4
      = f.label :city_id, t('.city_id'), class: 'col-form-label text-md-right col-12 col-md-3 col-lg-3'
      .col-sm-12.col-md-7
        = f.text_field :city_id, class: 'form-control'
    .form-group.row.mb-4
      = f.label :religion, t('.religion'), class: 'col-form-label text-md-right col-12 col-md-3 col-lg-3'
