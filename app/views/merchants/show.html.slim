section.section
  .section-header
    h1 Master Data
    .section-header-breadcrumb
      .breadcrumb-item.active
        a href="#"  Dashboard
      .breadcrumb-item Credits
  .section-body
    - if notice
      .alert.alert-success.alert-dismissible.show.fade
        .alert-body
          button.close data-dismiss="alert"
            span &times;
          = notice

    h2.section-title = @merchant.name
    p.section-lead
      = "Data ID : #{@merchant.id}"
    .row
      .col-12
        .card
          .card-header
            h4 Details
          .card-body
            .list-unstyled.list-unstyled-border.mt-4
              .media
                .media-icon
                  i.far.fa-circle
                .media-body
                  h6 Nama
                  p = @merchant.name
              .media
                .media-icon
                  i.far.fa-circle
                .media-body
                  h6 Description
                  p = @merchant.description
  .buttons
    = link_to 'Edit', edit_merchant_path(@merchant), class: 'btn btn-warning'
    = link_to 'Back', merchants_path(@merchant), class: 'btn'